<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:id="@+id/event_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="タイトル"
        app:bootstrapBrand="primary"
        app:bootstrapHeading="h3" />

    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:id="@+id/event_detail_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="イベントタイプ"
        app:bootstrapBrand="success"
        app:bootstrapHeading="h6" />

    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:id="@+id/event_detail_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="日時"
        app:bootstrapBrand="danger"
        app:bootstrapHeading="h5" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/event_detail_place"
        map:liteMode="true"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>